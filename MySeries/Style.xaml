<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MySeries">

    <!--Window style-->
    <LinearGradientBrush x:Key="WindowBackground" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFAA0404" Offset="0"/>
        <GradientStop Color="#FF830505" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="HeaderColor" Color="#FF830505"/>


    <!--Background button-->
    <LinearGradientBrush x:Key="MainButton" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FF9C0F0F" Offset="0"/>
        <GradientStop Color="#FF6E0000" Offset="1"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="SecondaryButton" EndPoint="0.5,1" StartPoint="0.5,0">
        <GradientStop Color="#FFA80404" Offset="0"/>
        <GradientStop Color="#FF570000" Offset="1"/>
    </LinearGradientBrush>

    <!--Border button-->
    <SolidColorBrush x:Key="MainButtonBorderColor" Color="Black" />
    <SolidColorBrush x:Key="SecondaryButtonBorderColor" Color="White"/>

</ResourceDictionary>